<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        ResizeMode ="NoResize">
    <Grid>
        <DataGrid ColumnWidth="*"  IsReadOnly="True"  ItemsSource="{Binding Cryptos}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="17,150,17,18">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Number}" Width="-2"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" />
                <DataGridTextColumn Header="Market Cap" Binding="{Binding MakeCap}" />
                <DataGridTextColumn Header="Price (USD)" Binding="{Binding Price}" />
                <DataGridTextColumn Header="24h Change в %" Binding="{Binding PercentChange24h}" />

            </DataGrid.Columns>
        </DataGrid>
        <Label Content="All Cryptocurrencies" HorizontalAlignment="Center" Height="63" Margin="0,17,0,0" VerticalAlignment="Top" Width="463" FontSize="36" FontFamily="Arial Black"/>
    </Grid>
</Window>
